  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug FastAPI Backend",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["FastAPI.main:app", "--reload", "--port", "8000"],
      "justMyCode": true,
      "jinja": true,
      "env": { "PYTHONPATH": "${workspaceFolder}/FastAPI" },
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python Debugger: Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${workspaceFolder}/FastAPI",
        "--maxfail=3",
        "--disable-warnings"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/FastAPI"
      },
      "cwd": "${workspaceFolder}/FastAPI",
      "justMyCode": true
    }
  ]
}
